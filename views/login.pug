extends layout.pug

block content
    h1.ui.center.aligned.header(style="margin-top: 3em") Login
    div.ui.center.segments(style="width:300px;margin-left: auto!important;margin-right: auto!important;")
        div.ui.segment
            form.ui.form(action="/api/v1/login" method="post")
                div.field
                    input(type="text" name="userId" placeholder="User" autocapitalize="off" autocorrect="off" autofocus="autofocus" autocomplete="off")
                div.field
                    input(type="password" name="password" placeholder="Password" autocomplete="off")
                button.ui.primary.button(type="submit") Submit